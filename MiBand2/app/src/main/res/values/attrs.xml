<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColorPrimary" format="color" />
    <attr name="textColorSecondary" format="color" />
    <attr name="textColorTertiary" format="color" />

    <attr name="chart_deep_sleep" format="color" />
    <attr name="chart_light_sleep" format="color" />
    <attr name="chart_activity" format="color" />
    <attr name="chart_not_worn" format="color" />

    <declare-styleable name="CameraControls">
        <attr name="camera" format="reference" />
        <attr name="cover" format="reference" />
    </declare-styleable>

    <!--
   Michele Lacorte
   Swipeable Card Custom Attr
   -->
    <declare-styleable name="SwipeableCard">
        <!-- Set card radius -->
        <attr name="sc_cardRadius" format="dimension"/>
        <!-- Set animation duration -->
        <attr name="sc_animDuration" format="float"/>
        <!-- Set title on toolbar -->
        <attr name="sc_title" format="string"/>
        <!-- Set title color -->
        <attr name="sc_titleColor" format="color"/>
        <!-- Set image resource -->
        <attr name="sc_image" format="integer"/>
        <!-- Set sub title -->
        <attr name="sc_subTitle" format="string"/>
        <!-- Set toolbar color -->
        <attr name="sc_toolbarColor" format="color"/>
        <!-- Set text on SwipeableCard-->
        <attr name="sc_text" format="string"/>
        <!-- Set Swipe to dismiss on SwipeableCard-->
        <attr name="sc_swipeToDismiss" format="boolean"/>
        <!-- Set Auto Animation on SwipeableCard-->
        <attr name="sc_autoAnimation" format="boolean"/>
    </declare-styleable>
</resources>