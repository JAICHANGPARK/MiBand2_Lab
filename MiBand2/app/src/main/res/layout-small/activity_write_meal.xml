<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.writing.WriteMealActivity">

    <LinearLayout
        android:id="@+id/layout_01"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#334D6E"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_01"
        app:layout_constraintStart_toStartOf="@+id/layout_01"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_white_24dp" />

    <ImageView
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_01"
        app:layout_constraintEnd_toEndOf="@+id/layout_01"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_white_24dp" />

    <LinearLayout
        android:id="@+id/layout_02"
        android:layout_width="0dp"
        android:layout_height="142dp"
        android:background="#334D6E"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_01">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:text="시작시간"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:text="2018-05-06"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/startTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmjua"
                    android:text="16:00"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/startTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_expand_more_white_24dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:text="종료시간"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/endTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmjua"
                    android:text="16:00"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/endTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_expand_more_white_24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <nodomain.knu2018.bandutils.util.ObservableScrollView
        android:id="@+id/demo_4_obs_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/spinner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:text="구분"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/nice_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="2" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="곡류군"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10.0"
                app:bsb_min="0.0"
                app:bsb_progress="0.0"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_second_track_size="6dp"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_touch_to_seek="true"
                app:bsb_is_float_type="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="어육류"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_touch_to_seek="true"
                app:bsb_is_float_type="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="채소군"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_second_track_size="6dp"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_touch_to_seek="true"
                app:bsb_is_float_type="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="지방군"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_seek_by_section="true"
                app:bsb_show_section_mark="true"
                app:bsb_touch_to_seek="true"
                app:bsb_is_float_type="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="우유군"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_second_track_size="6dp"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_seek_by_section="false"
                app:bsb_show_section_mark="false"
                app:bsb_touch_to_seek="false"
                app:bsb_is_float_type="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="과일군"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_seek_by_section="false"
                app:bsb_show_section_mark="false"
                app:bsb_touch_to_seek="false"
                app:bsb_is_float_type="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bmjua"
                android:text="식사 포만감"
                android:textSize="14sp" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seek_bar_7"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_max="10"
                app:bsb_min="0"
                app:bsb_progress="5"
                app:bsb_second_track_color="@color/accent_custom"
                app:bsb_section_count="10"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>


    </nodomain.knu2018.bandutils.util.ObservableScrollView>


</android.support.constraint.ConstraintLayout>