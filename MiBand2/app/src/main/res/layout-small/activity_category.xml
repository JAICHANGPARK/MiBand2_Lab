<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.selectdevice.CategoryActivity">

    <!--<android.support.v7.widget.Toolbar-->

        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:elevation="11dp"-->
        <!--app:title="@string/category_toolbar"-->
        <!--app:titleTextColor="@android:color/white" >-->
        <!---->
    <!--</android.support.v7.widget.Toolbar>-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        app:title=" "
        app:titleTextColor="@android:color/white" >
    </android.support.v7.widget.Toolbar>

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/top_diagonal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        app:diagonal_angle="10"
        app:diagonal_direction="left"
        app:diagonal_position="bottom">


        <TextView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:elevation="11dp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:text="@string/category_toolbar"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/exo" />

    </com.github.florent37.diagonallayout.DiagonalLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <com.github.florent37.diagonallayout.DiagonalLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                app:diagonal_angle="10"
                app:diagonal_direction="right"
                app:diagonal_position="top">

                <TextView
                    android:id="@+id/category_first_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="11dp"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="@string/category_first_image"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:transitionName="category_first_text" />

                <ImageView
                    android:id="@+id/first_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_one"
                    android:transitionName="category_first" />
            </com.github.florent37.diagonallayout.DiagonalLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/category_second_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:elevation="11dp"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="@string/category_second_image"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:transitionName="category_second_text" />

                <ImageView
                    android:id="@+id/second_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_two"
                    android:transitionName="category_second" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:transitionName="category_third_text"
                    android:id="@+id/category_third_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:elevation="11dp"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="@string/category_third_image"
                    android:textColor="@android:color/white"
                    android:textSize="28sp" />

                <ImageView
                    android:transitionName="category_third"
                    android:id="@+id/third_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_third_2" />

            </RelativeLayout>

            <com.github.florent37.diagonallayout.DiagonalLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:diagonal_angle="10"
                app:diagonal_direction="left"
                app:diagonal_position="bottom">

                <TextView
                    android:id="@+id/category_fourth_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="11dp"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="@string/category_fourth_image"
                    android:textColor="@android:color/white"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/forth_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/category_fourth" />

            </com.github.florent37.diagonallayout.DiagonalLayout>

        </LinearLayout>

    </ScrollView>

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        app:diagonal_angle="10"
        app:diagonal_direction="right"
        app:diagonal_position="top">

        <ImageView
            android:id="@+id/bottom_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/exo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:elevation="11dp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:text="@string/category_bottom_image"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

    </com.github.florent37.diagonallayout.DiagonalLayout>


</RelativeLayout>