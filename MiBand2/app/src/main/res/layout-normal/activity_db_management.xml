<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nodomain.knu2018.bandutils.activities.DbManagementActivity">

    <TextView
        android:id="@+id/db_management_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/bmhanna"
        android:text="@string/activity_db_management_import_export_explanation"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/activity_db_management_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/db_management_intro"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bmhanna"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:layout_below="@+id/activity_db_management_path"
        android:id="@+id/start_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@color/secondarytext" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_swap_vert_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bmhanna"
                    android:text="Management"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/secondarytext" />
            </LinearLayout>


            <TextView
                android:id="@+id/compress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/bmhanna"
                android:text="파일 압축"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/bmhanna"
                android:text="추출한 데이터를 압축하고 공유하고 싶을 때, 이 버튼을 눌러주세요."
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/compressDBButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/bmhanna"
                android:gravity="start|center"
                android:text="COMPRESS" />

            <Button
                android:id="@+id/exportDBButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/bmhanna"
                android:gravity="start|center"
                android:text="EXPORT" />

            <Button
                android:id="@+id/backupDBButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/bmhanna"
                android:gravity="start|center"
                android:text="BACK UP" />

            <Button
                android:id="@+id/importDBButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/bmhanna"
                android:gravity="start|center"
                android:text="IMPORT" />

            <TextView
                android:id="@+id/date_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmhanna"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <Space
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/under_text"
                    app:srcCompat="@drawable/ic_do_not_disturb_alt_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bmhanna"
                    android:text="Danger Zone"
                    android:textColor="@color/under_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/under_text" />

            <TextView
                android:textColor="@color/under_text"
                android:id="@+id/emptyDBText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/bmhanna"
                android:text="Warning! By pushing this button you will wipe your database and start from scratch."
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/emptyDBButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableTint="@color/under_text"
                android:fontFamily="@font/bmhanna"
                android:gravity="start|center"
                android:text="DELETE DATABASES"
                android:textColor="@color/under_text" />

            <Button
                android:layout_marginBottom="8dp"
                android:id="@+id/deleteOldActivityDB"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableTint="@color/under_text"
                android:fontFamily="@font/bmhanna"
                android:gravity="start|center"
                android:text="DELETE OLD DATABASES"
                android:textColor="@color/under_text" />

        </LinearLayout>


