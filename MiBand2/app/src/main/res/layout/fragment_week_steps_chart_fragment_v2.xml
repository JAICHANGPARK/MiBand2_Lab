<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.charts.WeekStepsChartFragmentV2">


    <com.ruesga.timelinechart.TimelineChartView
        xmlns:tlc="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graph"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:background="@color/colorPrimary"
        tlc:layout_constraintEnd_toEndOf="parent"
        tlc:layout_constraintStart_toStartOf="parent"
        tlc:layout_constraintTop_toTopOf="parent"
        tlc:tlcFooterBackground="@color/accent_custom"
        tlc:tlcGraphBackground="@color/colorPrimaryReallyDark"
        tlc:tlcGraphMode="tlcBarsStack"
        tlc:tlcShowFooter="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graph">

        <TextView
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/todayTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="걸음수" />

        <TextView
            android:layout_margin="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/todayDataText"
            android:textSize="28sp"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>